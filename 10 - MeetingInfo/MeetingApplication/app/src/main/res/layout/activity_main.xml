<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".MainActivity"
    android:background="#F1E8CE"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <TextView
        android:id="@+id/textv1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Schedule Meetings"
        android:fontFamily="sans-serif-condensed-medium"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:textSize="35sp"
        android:textColor="#D36F4A"
        android:textStyle="bold"
        android:layout_marginTop="40dp"/>

    <ImageView
        android:id="@+id/image"
        android:layout_width="300dp"
        android:layout_height="250dp"
        app:layout_constraintTop_toBottomOf="@id/textv1"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:src="@drawable/meeting"/>

    <TextView
        android:id="@+id/tv1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/image"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="50dp"
        android:text="Enter the meeting topic:"
        android:textColor="#2F9771"
        android:textStyle="bold"
        android:fontFamily="sans-serif-condensed"
        android:textSize="20sp"/>

    <EditText
        android:id="@+id/agenda"
        android:layout_width="400dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/tv1"
        app:layout_constraintLeft_toLeftOf="parent"
        android:background="@drawable/textbg"
        android:hint="Enter the agenda"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="20dp"
        android:textSize="20sp"
        android:padding="8dp"
        android:textColor="#672722"
        android:textColorHint="@color/white"/>

    <TextView
        android:id="@+id/tv2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/agenda"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="50dp"
        android:layout_marginTop="30dp"
        android:text="Date of the meeting:"
        android:textColor="#2F9771"
        android:textStyle="bold"
        android:fontFamily="sans-serif-condensed"
        android:textSize="20sp"/>

    <EditText
        android:id="@+id/date"
        android:layout_width="400dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/tv2"
        app:layout_constraintLeft_toLeftOf="parent"
        android:background="@drawable/textbg"
        android:hint="Choose the date"
        android:layout_marginTop="20dp"
        android:textSize="20sp"
        android:textColor="#672722"
        android:padding="8dp"
        app:layout_constraintRight_toRightOf="parent"
        android:textColorHint="@color/white"/>

    <TextView
        android:id="@+id/tv3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/date"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="50dp"
        android:layout_marginTop="30dp"
        android:text="Time of the meeting:"
        android:textColor="#2F9771"
        android:textStyle="bold"
        android:fontFamily="sans-serif-condensed"
        android:textSize="20sp"/>

    <EditText
        android:id="@+id/time"
        android:layout_width="400dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/tv3"
        app:layout_constraintLeft_toLeftOf="parent"
        android:background="@drawable/textbg"
        android:textColor="#672722"
        android:hint="Choose the time"
        android:layout_marginTop="20dp"
        android:textSize="20sp"
        android:padding="8dp"
        app:layout_constraintRight_toRightOf="parent"
        android:textColorHint="@color/white"/>

    <Button
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/time"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="80dp"
        android:text="SCHEDULE"
        android:textSize="25sp"
        android:textColor="#AED8D8"
        android:background="@drawable/buttonbg"
        android:onClick="onClickAdd"/>

</androidx.constraintlayout.widget.ConstraintLayout>
