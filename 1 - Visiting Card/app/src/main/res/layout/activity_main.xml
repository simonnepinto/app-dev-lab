<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:tools="http://schemas.android.com/tools"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/background">


    <ImageView
        android:id="@+id/logo"
        android:layout_width="150dp"
        android:layout_height="180dp"
        android:src="@drawable/logo"
        android:layout_marginTop="40dp"
        android:scaleType="centerCrop"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toRightOf="@id/name"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginRight="30dp"/>

    <TextView
        android:id="@+id/name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Simonne Pinto"
        android:textSize="25sp"
        android:textAllCaps="true"
        android:textStyle="bold"
        android:textColor="@color/white2"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintRight_toLeftOf="@id/logo"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="17dp"
        android:layout_marginTop = "70dp"/>

    <TextView
        android:id="@+id/title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:text="Student"
        android:textSize="25sp"
        android:textStyle="bold"
        android:textColor="@color/white2"
        app:layout_constraintRight_toLeftOf="@id/logo"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="26dp"
        app:layout_constraintTop_toBottomOf="@id/name"/>

    <View
        android:id="@+id/line"
        android:layout_width="250dp"
        android:background="#ffffff"
        android:layout_height="3sp"
        android:layout_marginTop="150dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/title"/>

    <TextView
        android:id="@+id/email"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="25dp"
        android:text="pintosimonne@gmail.com"
        android:textSize="20sp"
        android:textStyle="bold"
        android:textColor="@color/teal_200"
        android:gravity="center"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/line"/>

    <ImageView
        android:layout_width="15dp"
        android:layout_height="18dp"
        android:src="@drawable/ic_baseline_email_24"
        app:layout_constraintRight_toLeftOf="@id/email"
        android:layout_marginTop="31dp"
        android:layout_marginRight="10dp"
        app:layout_constraintTop_toBottomOf="@id/line" />

    <TextView
        android:id="@+id/phone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="+91 9008479252"
        android:textSize="20sp"
        android:textStyle="bold"
        android:textColor="@color/teal_200"
        android:gravity="center"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/email"/>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_baseline_local_phone_24"
        app:layout_constraintTop_toBottomOf="@id/email"
        app:layout_constraintRight_toLeftOf="@id/phone"
        android:layout_marginTop="11dp"
        android:layout_marginRight="10dp"/>

    <TextView
        android:id="@+id/school"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="St Joseph Engineering College"
        android:textSize="20sp"
        android:textStyle="bold"
        android:textColor="@color/teal_200"
        android:gravity="center"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/phone"/>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_baseline_school_24"
        app:layout_constraintTop_toBottomOf="@id/phone"
        app:layout_constraintRight_toLeftOf="@id/school"
        android:layout_marginTop="11dp"
        android:layout_marginRight="10dp"/>

    <TextView
        android:id="@+id/address"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="Mangalore, Karnataka"
        android:textSize="20sp"
        android:textColor="@color/teal_200"
        android:textStyle="bold"
        android:gravity="center"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/school"/>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_baseline_home_24"
        app:layout_constraintTop_toBottomOf="@id/school"
        app:layout_constraintRight_toLeftOf="@id/address"
        android:layout_marginTop="11dp"
        android:layout_marginRight="10dp"/>


</androidx.constraintlayout.widget.ConstraintLayout>
